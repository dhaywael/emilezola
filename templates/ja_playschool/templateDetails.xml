		<filename>index.php</filename>
		<filename>error.php</filename>
		<filename>offline.php</filename>
		<filename>thememagic.xml</filename>
		<filename>templateInfo.php</filename>
		<filename>templateHook.php</filename>
		<filename>template_preview.png</filename>
		<filename>template_thumbnail.png</filename>
		<filename>templateDetails.xml</filename>
		<folder>acm</folder>
		<folder>contenttype</folder>
		<folder>etc</folder>
		<folder>fonts</folder>
		<folder>html</folder>
		<folder>css</folder>
		<folder>js</folder>
		<folder>less</folder>
		<folder>language</folder>
		<folder>images</folder>
		<folder>tpls</folder>
	</files>
	
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.tpl_ja_playschool.ini</language>
		<language tag="en-GB">en-GB/en-GB.tpl_ja_playschool.sys.ini</language>
	</languages>

	<positions>
		<position>footer</position>
		<position>footer-1</position>
		<position>footer-2</position>
		<position>footer-3</position>
		<position>head-right</position>
		<position>js_side_frontpage</position>
		<position>js_side_frontpage_bottom</position>
		<position>js_side_frontpage_top</position>
		<position>languageswitcherload</position>
