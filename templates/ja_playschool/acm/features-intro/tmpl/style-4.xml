<?xml version="1.0" encoding="utf-8"?>
<form>
    <title>Features Intro Style 4</title>
	<sampledata></sampledata>
	<fields name="features-intro">
		<fieldset name="basic" label="FEATURES_BASIC_LABEL" description="FEATURES_BASIC_DESC">
			<field name="features-des" type="textarea" default="" rows="5" cols="40"  label="FEATURES_DESCRIPTION_LABEL" description="FEATURES_DESCRIPTION_DESC" />
			
			<field name="columns" type="list" label="FEATURES_COLUMNS_LABEL" description="FEATURES_COLUMNS_DESC" >
				<option value="1">1</option>
				<option value="2">2</option>
				<option value="3">3</option>
				<option value="4">4</option>
				<option value="6">6</option>
			</field>
			
			<field name="align" type="list" label="FEATURES_ALIGN_LABEL" description="FEATURES_ALIGN_DESC" >
				<option value="0">Left</option>
				<option value="1">Right</option>
			</field>

			<field name="btn-link" type="text" default="" label="FEATURES_BUTTON_LINK_LABEL" description="FEATURES_BUTTON_LINK_DESCC" />

			<field name="btn-title" type="text" default="" label="FEATURES_BUTTON_LINK_TITLE_LABEL" description="FEATURES_BUTTON_LINK_TITLE_DESC" />

			<field name="btn-color" type="list" default="primary" label="FEATURES_COLOR_LABEL" description="FEATURES_COLOR_LABEL_DESC">
				<option value="primary">Primary</option>
				<option value="blue">Blue</option>
				<option value="green">Green</option>
				<option value="red">Red</option>
				<option value="yellow">Yellow</option>
				<option value="pink">Pink</option>
				<option value="purple">Purple</option>
			</field>
			
		</fieldset>
		
		<fieldset name="section-features" label="FEATURES_SECTION_LABEL" description="FEATURES_SECTION_DESC" multiple="1">
			
				<field name="title" type="text" default="" size="40" label="FEATURES_TITLE_LABEL" description="FEATURES_TITLE_DESC" required="1" />
				<field name="title-link" type="text" default="" size="40" label="FEATURES_TITLE_LINK_LABEL" description="FEATURES_TITLE_LINK_DESC"  />
				<field name="img" type="media" default="" label="FEATURES_IMAGE_LABEL" description="FEATURES_IMAGE_LABEL_DESC"  />
				<field name="img-rotate" type="text" default="0" label="FEATURES_ROTATE_IMAGE_LABEL" description="FEATURES_ROTATE_IMAGE_LABEL_DESC"  />
				<field name="description" type="textarea" default="" label="FEATURES_DESCRIPTION_LABEL" description="FEATURES_DESCRIPTION_DESC" rows="5" cols="40" />

		</fieldset>
		
  </fields>
</form>