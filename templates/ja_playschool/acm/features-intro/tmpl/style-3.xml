<?xml version="1.0" encoding="utf-8"?>
<form>
    <title>Features Intro Style 6</title>
	<sampledata></sampledata>
	<fields name="features-intro">
		<fieldset name="basic" label="FEATURES_BASIC_LABEL" description="FEATURES_BASIC_DESC">
			<field name="type-color" type="list" default="primary" label="FEATURES_COLOR_LABEL" description="FEATURES_COLOR_LABEL_DESC">
				<option value="primary">Primary</option>
				<option value="blue">Blue</option>
				<option value="green">Green</option>
				<option value="red">Red</option>
				<option value="yellow">Yellow</option>
				<option value="pink">Pink</option>
				<option value="purple">Purple</option>
			</field>

			<field name="description" type="textarea" default="" label="FEATURES_DESCRIPTION_LABEL" description="FEATURES_DESCRIPTION_DESC" rows="5" cols="40" />

			<field name="pattern-bg" type="media" default="" label="FEATURES_IMAGE_PATTERN_LABEL" description="FEATURES_IMAGE_PATTERN_DESC" />
			
			<field name="align" type="list" label="FEATURES_ALIGN_LABEL" description="FEATURES_ALIGN_DESC" >
				<option value="0">Left</option>
				<option value="1">Right</option>
			</field>
			
			<field name="img-features" type="media" default="" label="FEATURES_BACKGROUND_LABEL" description="FEATURES_BACKGROUND_LABEL_DESC" ></field>

			<field name="btn-link" type="text" default="" label="FEATURES_BUTTON_LINK_LABEL" description="FEATURES_BUTTON_LINK_DESC" />

			<field name="btn-title" type="text" default="" label="FEATURES_BUTTON_LINK_TITLE_LABEL" description="FEATURES_BUTTON_LINK_TITLE_DESC" />

			<field name="btn-color" type="list" default="primary" label="FEATURES_BUTTON_COLOR_LABEL" description="FEATURES_BUTTON_COLOR_LABEL_DESC">
				<option value="primary">Primary</option>
				<option value="blue">Blue</option>
				<option value="green">Green</option>
				<option value="red">Red</option>
				<option value="yellow">Yellow</option>
				<option value="pink">Pink</option>
				<option value="purple">Purple</option>
			</field>
		</fieldset>
  </fields>
</form>