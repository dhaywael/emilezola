<?xml version="1.0" encoding="utf-8"?>
<form>
    <title>Features Intro Style 1</title>
	<sampledata></sampledata>
	<fields name="features-intro">
		<fieldset name="basic" label="FEATURES_BASIC_LABEL" description="FEATURES_BASIC_DESC">			
			<field name="columns" type="list" label="FEATURES_COLUMNS_LABEL" description="FEATURES_COLUMNS_DESC" >
				<option value="1">1</option>
				<option value="2">2</option>
				<option value="3">3</option>
				<option value="4">4</option>
			</field>
		</fieldset>
	
		<fieldset name="section-features" label="FEATURES_SECTION_LABEL" description="FEATURES_SECTION_DESC" multiple="1">
				<field name="type-color" type="list" default="primary" label="FEATURES_COLOR_LABEL" description="FEATURES_COLOR_LABEL_DESC">
					<option value="primary">Primary</option>
					<option value="blue">Blue</option>
					<option value="green">Green</option>
					<option value="red">Red</option>
					<option value="yellow">Yellow</option>
					<option value="pink">Pink</option>
					<option value="purple">Purple</option>
				</field>

				<field name="img" type="media" default="" label="FEATURES_IMAGE_LABEL" description="FEATURES_IMAGE_LABEL_DESC"  />
				<field name="mask" type="media" default="" label="FEATURES_IMAGE_MASK_LABEL" description="FEATURES_IMAGE_LABEL_MASK_DESC"  />
				<field name="title" type="text" default="" size="40" label="FEATURES_TITLE_LABEL" description="FEATURES_TITLE_DESC" required="1" />
				<field name="sub-title" type="text" default="" size="40" label="FEATURES_SUB_TITLE_LABEL" description="FEATURES_SUB_TITLE_DESC" required="1" />
				<field name="description" type="textarea" default="" label="FEATURES_DESCRIPTION_LABEL" description="FEATURES_DESCRIPTION_DESC" rows="5" cols="40" />
				<field name="link" type="text" default="" label="FEATURES_LINK_LABEL" description="FEATURES_LINK_DESC" />
				<field name="btn-value" type="text" default="" label="FEATURES_BTN_VALUE_LABEL" description="FEATURES_BTN_VALUE_DESC" />
		</fieldset>
		
  </fields>
</form>